<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.solvd.laba.iis.persistence.mybatis.GroupMapper">

    <resultMap id="group" type="com.solvd.laba.iis.domain.Group">
        <id property="id" column="id" javaType="java.lang.Long" jdbcType="BIGINT"/>
        <result property="number" column="number" javaType="java.lang.Integer" jdbcType="INTEGER"/>
    </resultMap>

    <select id="findAll" parameterType="list" resultMap="group">
        SELECT DISTINCT groups.id, groups.number
        FROM groups
    </select>

    <select id="findById" parameterType="java.lang.Long" resultMap="group">
        SELECT DISTINCT groups.id, groups.number
        FROM groups
        WHERE id = #{id}
    </select>

    <select id="findByCriteria" resultMap="group">
        SELECT DISTINCT groups.id, groups.number
        FROM groups
        LEFT JOIN lessons ON (lessons.group_id = groups.id)
        WHERE lessons.teacher_id = #{teacherId}
        <if test="groupSearchCriteria.getSubjectId() != null">
            AND lessons.subject_id = #{groupSearchCriteria.getSubjectId()}
        </if>
    </select>

    <update id="update" parameterType="com.solvd.laba.iis.domain.Group">
        UPDATE groups
        <set>
            <if test="number != null">
                number = #{name}
            </if>
        </set>
        WHERE id = #{id}
    </update>

    <delete id="delete" parameterType="java.lang.Long">
        DELETE
        FROM groups
        WHERE id = #{id}
    </delete>

    <insert id="insert" parameterType="com.solvd.laba.iis.domain.Group">
        INSERT INTO groups
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="number != null">
                name
            </if>
        </trim>
        <trim prefix="VALUES (" suffix=")" suffixOverrides=",">
            <if test="number != null">
                #{number}
            </if>
        </trim>
    </insert>

</mapper>